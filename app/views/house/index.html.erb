<div id="main">
	<div id="left" class="form-group">
		<h4>Add</h4>
		<form class="form-inline" ng-submit="submit($index)" name="addForm" ng-model="addForm" />
		<p><label>Item:</label> <input type="text" name="addItem" ng-model="item" ng-minlength="3" required /></p>
		<div ng-messages="addForm.item.$error">
			<div ng-message="required">This field is required</div>
			<div ng-message="minlength">Message must be over 2 char</div>
		</div>

		<label>Where:</label> <select class="form-control select_box" name="addRoom" ng-model="room" ng-minlength="4" required /><option value ="" disabled ng-selected="true">Choose one</option>
		<option value="Yard">Yard</option>
		<option value="Living Room">Living Room</option>
		<option value="Kitchen">Kitchen</option>
		<option value="Bathroom">Bathroom</option>
		<option value="Bedroom">Bedroom</option>
		</select>
		<div class="button"><button class="btn btn-primary" type="submit">Submit</button></div>
		</form>
		<h4>Search</h4>
		<input type="text" class="search" ng-model="query" />
		<ul>
			<li ng-show="query" ng-repeat="thing in things | filter:search" class="results">{{thing.item}} - {{thing.room}}</li>
	  	</ul>
	</div>
	<div id="right">
	<div class="test">
	<div ng-bind="message" class="message">{{thing.warning}}</div>
	<ul>
	<li ng-repeat="thing in things"><a href ng-click="remove(thing, $index)" class="red-x">&#10005;</a> {{thing.item}} - {{thing.room}}</li>
	</ul>
	</div>
	<section ng-init="tab = 1">
		<ul class="nav nav-tabs">
		<li ng-class="{ active:tab === 1 }"><a href ng-click="tab = 1">Yard</a></li>
		<li ng-class="{ active:tab === 2 }"><a href ng-click="tab = 2">Living Room</a></li>
		<li ng-class="{ active:tab === 3 }"><a href ng-click="tab = 3">Kitchen</a></li>
		<li ng-class="{ active:tab === 4 }"><a href ng-click="tab = 4">Bathroom</a></li>
		<li ng-class="{ active:tab === 5 }"><a href ng-click="tab = 5">Bedroom</a></li>
		</ul>
	</section>
	<div class="panel" ng-show="tab === 1">
		<b>There are {{(things|filter:{room:'Yard'}).length}} items in the yard</b>
		<p ng-repeat="thing in things | filter:{room:'Yard'}">{{thing.item}} - {{thing.room}}</p>
	</div>
	<div class="panel living" ng-show="tab === 2">
		<b>There are {{(things|filter:{room:'Living Room'}).length}} items in the living room</b>
			<p ng-repeat="thing in things | filter:{room:'Living Room'}">{{thing.item}} - {{thing.room}}</p>
	</div>
	<div class="panel kitchen" ng-show="tab === 3">
		<b>There are {{(things|filter:{room:'Kitchen'}).length}} items in the kitchen</b>
		<p ng-repeat="thing in things | filter:{room:'Kitchen'}">{{thing.item}} - {{thing.room}}</p>
	</div>
	<div class="panel bath" ng-show="tab === 4">
		<b>There are {{(things|filter:{room:'Bathroom'}).length}} items in the bathroom</b>
		<p ng-repeat="thing in things | filter:{room:'Bathroom'}">{{thing.item}} - {{thing.room}}</p>
	</div>
	<div class="panel bed" ng-show="tab === 5">
		<b>There are {{(things|filter:{room:'Bedroom'}).length}} items in the bedroom</b>
		<p ng-repeat="thing in things | filter:{room:'Bedroom'}">{{thing.item}} - {{thing.room}}</p>
	</div>
	</div>
	<div class="clear_left"></div>
</div>